<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar', { user: user }) %>

    <main class="container my-5">
        <h2>Admin Dashboard</h2>
        <div class="row mb-4">
            <div class="col">
                <a href="/products/add" class="btn btn-primary me-2">Add Product</a>
                <a href="/users" class="btn btn-secondary me-2">Manage Users</a>
                <a href="/admin/orders" class="btn btn-success me-2">Manage Orders</a>
                <a href="/orders" class="btn btn-info">View My Orders</a>
            </div>
        </div>

        <h3 class="mb-3">All Orders</h3>
        <table class="table table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>User</th>
                    <th>Total</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.id %></td>
                        <td><%= order.userName %></td>
                        <td>$<%= Number(order.total).toFixed(2) %></td>
                        <td><%= order.createdat ? order.createdat.toLocaleString() : '-' %></td>
                        <td><%= order.status || 'Placed' %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <h3 class="mt-5 mb-3">Users</h3>
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Name/Email</th>
                    <th>Role</th>
                    <th>Address</th>
                    <th>Contact</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td>
                          <strong><%= user.username %></strong><br>
                          <small><%= user.email %></small>
                        </td>
                        <td><%= user.role %></td>
                        <td><%= user.address %></td>
                        <td><%= user.contact %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
</body>
</html>
