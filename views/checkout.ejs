<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Checkout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar', { user: user }) %>
  <main class="container my-5">
    <h3>Checkout</h3>
    <% if (!paypalClientId || paypalClientId.trim() === '') { %>
      <div class="alert alert-warning">PayPal is not configured. Please set <strong>PAYPAL_CLIENT_ID</strong>, <strong>PAYPAL_CLIENT_SECRET</strong>, and <strong>PAYPAL_API</strong> in your <code>.env</code> and restart the server.</div>
      <div class="mb-3"><strong>Current paypalClientId:</strong> <%= paypalClientId || '(empty)' %></div>
    <% } %>
    <% if (!cart || cart.length === 0) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr><th>Product</th><th>Qty</th><th>Price</th><th>Total</th></tr>
          </thead>
          <tbody>
            <% cart.forEach(function(i){ %>
              <tr>
                <td><%= i.name %></td>
                <td><%= i.quantity %></td>
                <td>$<%= Number(i.price).toFixed(2) %></td>
                <td>$<%= (Number(i.price) * Number(i.quantity)).toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="3" class="text-end"><strong>Total</strong></td>
              <td><strong>$<%= cart.reduce((s,i)=>s+(Number(i.price)*Number(i.quantity)),0).toFixed(2) %></strong></td>
            </tr>
          </tfoot>
        </table>
      </div>
      <div id="paypal-buttons" class="my-3"></div>
      <a href="/cart" class="btn btn-secondary">Back to Cart</a>
    <% } %>
  </main>

  <% if (paypalClientId && paypalClientId.trim() !== '') { %>
    <script>
      window.PAYPAL_CLIENT_ID = '<%= paypalClientId %>';
    </script>
    <script src="https://www.paypal.com/sdk/js?client-id=<%= paypalClientId %>&currency=SGD"></script>
    <script>
      // Create order on the server
      paypal.Buttons({
        createOrder: function() {
          return fetch('/api/paypal/create-order', {
            method: 'post',
            headers: { 'Content-Type': 'application/json' }
          }).then(function(res) { return res.json(); }).then(function(data) { return data.id; });
        },
        onApprove: function(data) {
          return fetch('/api/paypal/capture-order', {
            method: 'post',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ orderId: data.orderID })
          }).then(function(res){ return res.json(); }).then(function(result){
            if (result.success) {
              window.location.href = '/orders';
            } else {
              alert('Payment processed but order failed to save');
            }
          });
        }
      }).render('#paypal-buttons');
    </script>
  <% } %>
</body>
</html>
