<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Order Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .page-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 40px 0;
      margin-bottom: 30px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    .page-header h1 {
      font-weight: 700;
      margin: 0;
    }
    .page-header p {
      margin: 5px 0 0 0;
      opacity: 0.9;
    }
    .back-button {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      color: #667eea;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s;
      margin-bottom: 20px;
    }
    .back-button:hover {
      color: #764ba2;
      transform: translateX(-5px);
    }
    .order-section {
      background: white;
      border-radius: 12px;
      padding: 30px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      margin-bottom: 30px;
    }
    .section-title {
      font-size: 20px;
      font-weight: 700;
      color: #333;
      margin-bottom: 25px;
      padding-bottom: 15px;
      border-bottom: 3px solid #667eea;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .section-title i {
      color: #667eea;
      font-size: 24px;
    }
    .order-summary {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }
    .summary-card {
      background: #f8f9fa;
      border-radius: 10px;
      padding: 20px;
      border-left: 4px solid #667eea;
    }
    .summary-label {
      font-size: 12px;
      color: #999;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-weight: 600;
      margin-bottom: 8px;
    }
    .summary-value {
      font-size: 18px;
      font-weight: 700;
      color: #333;
    }
    .summary-value.amount {
      color: #667eea;
      font-size: 22px;
    }
    .items-table {
      width: 100%;
      border-collapse: collapse;
    }
    .items-table thead th {
      background-color: #f8f9fa;
      border-bottom: 2px solid #dee2e6;
      font-weight: 600;
      color: #667eea;
      text-transform: uppercase;
      font-size: 12px;
      letter-spacing: 0.5px;
      padding: 15px;
      text-align: left;
    }
    .items-table tbody td {
      padding: 15px;
      vertical-align: middle;
      border-bottom: 1px solid #dee2e6;
    }
    .items-table tbody tr:hover {
      background-color: #f8f9fa;
    }
    .product-name {
      font-weight: 500;
      color: #333;
    }
    .price-value {
      color: #667eea;
      font-weight: 600;
    }
    .empty-state {
      text-align: center;
      padding: 40px 20px;
    }
    .empty-state i {
      font-size: 60px;
      color: #ddd;
      margin-bottom: 20px;
    }
    .empty-state p {
      color: #999;
      font-size: 16px;
    }
  </style>
</head>
<body>
<%- include('partials/navbar', { user: user }) %>

<!-- Page Header -->
<div class="page-header">
  <div class="container">
    <h1><i class="fas fa-receipt"></i> Order Details</h1>
    <p>Review your order information and items</p>
  </div>
</div>

<main class="container my-4">
  <a href="/orders" class="back-button">
    <i class="fas fa-arrow-left"></i> Back to Orders
  </a>

  <% if (!items || items.length === 0) { %>
    <div class="order-section">
      <div class="empty-state">
        <i class="fas fa-inbox"></i>
        <p>No items found for this order</p>
      </div>
    </div>
  <% } else { %>

    <!-- Order Items Section -->
    <div class="order-section">
      <div class="section-title">
        <i class="fas fa-shopping-bag"></i> Order Items
      </div>

      <table class="items-table">
        <thead>
          <tr>
            <th style="width: 50%;"><i class="fas fa-box"></i> Product</th>
            <th style="width: 15%;"><i class="fas fa-dollar-sign"></i> Price</th>
            <th style="width: 15%;"><i class="fas fa-cubes"></i> Quantity</th>
            <th style="width: 20%; text-align: right;"><i class="fas fa-calculator"></i> Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(function(it) { %>
            <tr>
              <td><span class="product-name"><%= it.productName || ('Product #' + it.productid) %></span></td>
              <td><span class="price-value">$<%= Number(it.price).toFixed(2) %></span></td>
              <td><%= it.quantity %></td>
              <td style="text-align: right;"><strong class="price-value">$<%= Number(it.price * it.quantity).toFixed(2) %></strong></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <!-- Order Total -->
      <div style="text-align: right; margin-top: 30px; padding-top: 20px; border-top: 2px solid #dee2e6;">
        <div style="display: flex; justify-content: flex-end; gap: 40px; align-items: center;">
          <span style="font-weight: 600; color: #333;">Order Total:</span>
          <span style="font-size: 28px; font-weight: 700; color: #667eea;">
            $<%= items.reduce((sum, it) => sum + (it.price * it.quantity), 0).toFixed(2) %>
          </span>
        </div>
      </div>
    </div>

  <% } %>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
